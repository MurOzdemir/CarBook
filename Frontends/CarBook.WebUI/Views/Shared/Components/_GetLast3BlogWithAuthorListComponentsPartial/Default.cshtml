@model List<ResultLast3BlogsWithAuthors>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Bloglar</span>
                <h2>En Popüler Bloglar</h2>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="row d-flex">
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <a href="blog-single.html" class="block-20" style="background-image: url('@item.CoverImageUrl /* /carbook-master/images/image_1.jpg */');">
                        </a>
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div><a href="#">@item.CreatedDate.ToShortDateString()/* Oct. 29, 2019 */</a></div>
                                <div><a href="#">@item.AuthorName/* Admin */</a></div>
                                <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 0/a></div>
                            </div>
                            <h3 class="heading mt-2"><a href="#">@item.Title @* Why Lead Generation is Key for Business Growth *@</a></h3>
                            <p><a href="#" class="btn btn-primary">Devamını Oku</a></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>	